<div class="container">
  <h1>Welcome to Sinatra!</h1>
  <p>Hello, world!</p>

  <table>
    <tr>
      <th>File Description</th>
      <th>File Location</th>
    </tr>
    <tr>
      <td>This view file</td>
      <td><code><%= __FILE__.gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The layout file</td>
      <td><code><%= File.expand_path('../layout.erb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The current controller</td>
      <td><code><%= File.expand_path('../../controllers/index.rb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
  </table>
</div>

<div>
  <center>
  <form name="get_request" action="cool_url" method="get">
    <input type="text" name="user_input">
    <input type="submit" value="Make a GET Request">
  </form>
  <br>
  <form name="input" action="cool_url" method="post">
    <input type="text" name="user_input">
    <input type="submit" value="Make a POST Request">
  </form>
  <br>
  <form name="input" action="cool_url" method="post">
    <p>post[title]</p><br>
    <input type="text" name="post[title]">
    <p>post[price]</p><br>
    <input type="text" name="post[price]">
    <p>post[description]</p><br>
    <textarea name="post[description]"></textarea></br>
    <input type="submit" value="POST REQ">
  </form>
  </center>
</div>

<div>
  <p>Instance Variables Available to this view:</p>
  <p><%= instance_variables %></p>
  <p>A look inside params:</p>
  <p><%= params.inspect %></p>
  <p>What Class is this page?</p>
  <p><%= self.class %></p>
</div>
